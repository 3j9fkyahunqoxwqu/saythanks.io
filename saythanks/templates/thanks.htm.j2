{% extends "base.htm.j2" %}

{% block title %}Say Thank You{% endblock %}

{% block content %}


<div class="sixteen columns">
    <div class="eight columns offset-by-one">

<h4>Thanks for spreading positivity!</h4>

<p>You can create your own thankfulness inbox by visiting <a href="https://saythanks.io/"><strong>SayThanks.io</strong></a> or clicking below!</p>

        <script src="https://cdn.auth0.com/js/lock/10.5/lock.min.js"></script>
        <script>
            var options_signup = {
              theme: {
                labeledSubmitButton: false
              },
              allowSignUp: true,
              allowLogin: false,
              auth: {
                redirectUrl: '{{ callback_url }}',
                params: {
                  scope: 'openid email name picture'
                }
              }
            }

            var options_singin = {
              theme: {
                labeledSubmitButton: false
              },
              allowSignUp: false,
              allowLogin: true,
              auth: {
                redirectUrl: '{{ callback_url }}',
                params: {
                  scope: 'openid email name picture'
                }
              }
            }
            var lock1 = new Auth0Lock('{{ auth_id }}', '{{ auth_domain }}', options_signup);
            var lock2 = new Auth0Lock('{{ auth_id }}', '{{ auth_domain }}', options_singin);
</script>

<hr>
<button class="button-primary" type="submit" onClick="lock1.show();">Create Your Thankfulness Inbox</button>

<span>or...</span>

<button type="submit" onClick="lock2.show();">Access Your Thankfulness Inbox</button>

<hr>



</div>
</div>
{% endblock %}